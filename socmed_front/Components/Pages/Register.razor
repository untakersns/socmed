@page "/register"
@using socmed_front.Models
@using socmed_front.Services
@inject AuthService AuthService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center">Регистрация</h3>

                    <div class="mb-3">
                        <label>Имя пользователя</label>
                        <input type="text" class="form-control" @bind="registerModel.UserName" placeholder="SpiderMan" />
                    </div>

                    <div class="mb-3">
                        <label>Email</label>
                        <input type="email" class="form-control" @bind="registerModel.Email" placeholder="example@mail.com" />
                    </div>

                    <div class="mb-3">
                        <label>Пароль</label>
                        <input type="password" class="form-control" @bind="registerModel.Password" />
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }

                    <button class="btn btn-success w-100" @onclick="HandleRegister" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Регистрация...</span>
                        }
                        else
                        {
                            <span>Создать аккаунт</span>
                        }
                    </button>

                    <div class="mt-3 text-center">
                        <a href="/login">Уже есть аккаунт? Войти</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterRequest registerModel = new();
    private string? errorMessage;
    private bool isLoading = false;

    private async Task HandleRegister()
    {
        if (isLoading) return;

        // Валидация
        if (string.IsNullOrWhiteSpace(registerModel.UserName) || 
            string.IsNullOrWhiteSpace(registerModel.Email) || 
            string.IsNullOrWhiteSpace(registerModel.Password))
        {
            errorMessage = "Все поля обязательны";
            return;
        }

        if (registerModel.Password.Length < 6)
        {
            errorMessage = "Пароль должен быть не менее 6 символов";
            return;
        }

        errorMessage = null;
        isLoading = true;

        try
        {
            var success = await AuthService.Register(registerModel);

            if (success)
            {
                NavigationManager.NavigateTo("/login");
            }
            else
            {
                errorMessage = "Ошибка при регистрации. Возможно, такой email или имя уже заняты.";
            }
        }
        catch
        {
            errorMessage = "Ошибка при регистрации. Попробуйте позже.";
        }
        finally
        {
            isLoading = false;
        }
    }
}
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

<AuthorizeView>
    <Authorized>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@GetProfileLink()">Профиль</NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="users">Сообщество</NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="logout">Выйти</NavLink>
        </div>
    </Authorized>
</AuthorizeView>

@code {
    private string profileLink = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value
                     ?? authState.User.FindFirst("sub")?.Value;
        
        if (!string.IsNullOrEmpty(userId))
        {
            profileLink = $"profile/{userId}";
        }
    }

    private string GetProfileLink()
    {
        return profileLink;
    }
}

